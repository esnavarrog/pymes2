
<div class="bg-light shadow container-sm container-fluid rounded">
    <h1 class="text-center p-2 text-primary">
      <%= @category.name %>
    </h1>
    <div class="row justify-content-center">
      <% @category.products.each do |product| %>
      <% if product.pub_destacada == true %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <figure class="figure shadow-sm bg-white rounded">
          <div class="img-contenedor">
            
            <%= link_to (image_tag product.img.thumb.url, class:'card-img-top'), product, class:'stretched-link' %>
          </div>
          <!-- Estado de abierto o cerrado -->
        <% if (Time.now.strftime("%A") === "Sunday") && product.domingoA.try(:strftime, "%H %M")..product.domingoC.try(:strftime, "%H %M") === Time.now.strftime("%H %M") %>
          <span class="notify-badge shadow-sm bg-dark"><i class="fas fa-lock-open"></i> Atendiendo</span>
        <% elsif (Time.now.try(:strftime, "%A") === "Monday") && product.lunesA.try(:strftime, "%H %M")..product.lunesC.try(:strftime, "%H %M") === Time.now.strftime("%H %M") %>
          <span class="notify-badge shadow-sm bg-dark"><i class="fas fa-lock-open"></i> Atendiendo</span>
        <% elsif (Time.now.try(:strftime, "%A") === "Tuesday") && product.martesA.try(:strftime, "%H %M")..product.martesC.try(:strftime, "%H %M") === Time.now.strftime("%H %M") %>
          <span class="notify-badge shadow-sm bg-dark"><i class="fas fa-lock-open"></i> Atendiendo</span>
        <% elsif (Time.now.try(:strftime, "%A") === "Wednesday") && product.miercolesA.try(:strftime, "%H %M")..product.miercolesC.try(:strftime, "%H %M") === Time.now.strftime("%H %M") %>
        <span class="notify-badge shadow-sm bg-dark"><i class="fas fa-lock-open"></i> Atendiendo</span>
        <% elsif (Time.now.try(:strftime, "%A") === "Thursday") && product.juevesA.try(:strftime, "%H %M")..product.juevesC.try(:strftime, "%H %M") === Time.now.strftime("%H %M") %>
        <span class="notify-badge shadow-sm bg-dark"><i class="fas fa-lock-open"></i> Atendiendo</span>
        <% elsif (Time.now.try(:strftime, "%A"  ) === "Friday") && product.viernesA.try(:strftime, "%H %M")..product.viernesC.try(:strftime, "%H %M") === Time.now.strftime("%H %M") %>
        <span class="notify-badge shadow-sm bg-dark"><i class="fas fa-lock-open"></i> Atendiendo</span>
        <% elsif (Time.now.try(:strftime, "%A"  ) === "Saturday") && product.sabadoA.try(:strftime, "%H %M")..product.sabadoC.try(:strftime, "%H %M") === Time.now.strftime("%H %M") %>
          <span class="notify-badge shadow-sm bg-dark"><i class="fas fa-lock-open"></i> Atendiendo</span>
        <% else %>
          <span class="notify-badge shadow-sm bg-dark"><i class="fab fa-expeditedssl"></i> Cerrado por hoy</span>
        <% end %>

          <figcaption class="figure-caption p-2">
            <h6 class="text-center"><%= product.title.upcase %></h6>
            <p class="text-tiny text-center"><%= product.info.truncate(50) %></p>
            <!-- Ubicación -->
            <div class="row">
              <div class="col">
                <% if product.address.present? %>
                  <small class="float-left text-dark"><i class="fas fa-map-marked-alt"></i> <%= product.address %></small>
                <% end %>
              </div>
              <div class="col">
                <!-- Delivery si o no -->
                <% if product.delivery == true %>
                  <small class="float-right text-success"><i class="fas fa-motorcycle"></i> Delivery</small>
                <% else %>
                <% end %>
              </div>
            </div>
          </figcaption>
        </figure>
      </div>
      <% end %>
      <% end %>
    </div>
    
