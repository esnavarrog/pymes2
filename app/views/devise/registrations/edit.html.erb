
<div class="container-sm container-fluid shadow-sm bg-white rounded p-3">

  <h2 class="text-center">Actualizar información de <%= @user.name.capitalize %></h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group text-center">
    <%= image_tag @user.image.url(:medium), class:'redondaImg border border-dark' %>
  </div>
  
  
  <div class="form-group">
    <%= f.label :email%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control shadow-sm', placeholder:'Correo electrónico' %>
  </div>
  <div class="input-group shadow-sm">
    <%= f.label 'Sube un avatar', class:'custom-file-label' %>
    <%= f.file_field :image, autofocus: true, class:'custom-file-input shadow-sm', placeholder:'Sube un avatar' %>
  </div>
  
  <div class="row mt-3">
    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label 'Nombre'%>
        <%= f.text_field :name, placeholder: "Nombre", autocomplete: "name", class:'form-control shadow-sm' %>
      </div>
    </div>
    <div class="col-12 col-md-6">
      <div class="form-group">
        <%= f.label 'Apellido'%>
        <%= f.text_field :lastname, placeholder: "Apellido", class:'form-control shadow-sm' %>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label 'Dirección'%>
    <%= f.text_field :country, placeholder: "Donde vives?", class:'form-control shadow-sm' %>
  </div>
  <div class="form-group">
    <%= f.label 'Fecha Nacimiento' %>
    <%= f.date_field :date_of_birth, placeholder: "Fecha de Nacimiento", class:'form-control shadow-sm' %>
  </div>
  
  <div class="form-group">
    <%= f.rich_text_area :biografia, placeholder: "Escribe algo sobre tí...", class:'form-control shadow-sm' %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :password %> <i>(deja en blanco si no quieres cambiar esto.)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
    <% if @minimum_password_length %>
  
    <em> caracteres mínimos <%= @minimum_password_length %></em>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :current_password %> <i>(Necesitamos tu contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control' %>
  </div>
  
  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
  <% end %>
  
  <h3>Elimina tu cuenta</h3>
  
  <p>No estas feliz? <%= button_to "Elimina mi cuenta", registration_path(resource_name), data: { confirm: "Estás seguro?" }, method: :delete %></p>
  
  <%= link_to "Back", :back %>
  
</div>