<% if product.pub_clasificado == true %>
<% if product.view == true %>
<div class="col-sm-4 col-md-2">
  <figure class="figure shadow-sm bg-white rounded">
    <div class="img-contenedor">
      <%= link_to (image_tag product.img.thumb.url, class:'card-img-top'), product, class:'stretched-link' %>
    </div>
    <figcaption class="figure-caption pt-2 pb-2 border">
      <p class="m-2"><%= product.title.truncate(22) %></p>
      <% if user_signed_in? && current_user = @admin %>
          <%= link_to 'Destroy', product, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </figcaption>
      </figure>
    </div>
    <% end %>
    <% end %>