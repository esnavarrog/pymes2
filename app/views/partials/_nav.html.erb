<div class="bg-light fondoLogo py-2 row">
  <div class="col-12 col-sm-6 col-md-8">
    <%= link_to (image_tag 'logo.svg', class:'logo mx-auto d-block'), root_path %>
  </div>
  <div class="col-12 col-sm-6 col-md-4 text-center">
    <button class="btn redes btn-facebook mt-1">
      <i class="fab fa-facebook-f"></i> Facebook  
    </button>
    <button class="btn redes btn-twitter mt-1">
      <i class="fab fa-twitter"></i> Twitter
    </button>
    <button class="btn redes btn-instagram mt-1">
      <i class="fab fa-instagram"></i> Instagram
    </button>
  </div>
</div>

<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
  <%= link_to 'ConectaBuin', root_path, class:'navbar-brand' %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Comida
        </a>
        <div class="dropdown-menu fade" aria-labelledby="navbarDropdown">
          <% @categories.each do |category| %>
            <% if category.dropdown == 'Comida Rápida' %>
              <%= link_to category.name, category, class:'dropdown-item' %>
            <% end %>
          <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Servicios
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% @categories.each do |category| %>
            <% if category.dropdown == 'Servicios' %>
              <%= link_to category.name, category, class:'dropdown-item' %>
            <% end %>
          <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Delivery
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% @categories.each do |category| %>
            <% if category.dropdown == 'Delivery' %>
              <%= link_to category.name, category, class:'dropdown-item' %>
            <% end %>
          <% end %>
        </div>
      </li>
     
    </ul>
    <form class="form-inline my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">
      <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Buscar</button>
    </form>
    <ul class="navbar-nav my-2 my-lg-0">

      <% if user_signed_in? %>
      <li>
        <%= link_to 'Salir', destroy_user_session_path, method: :delete, class:'nav-link' %>
      </li>
      <% else %>
      <li>
        <%= link_to 'Iniciar sesión', new_user_session_path, class:'nav-link' %>
      </li>
      <li>
        <%= link_to 'Registrarse', new_user_registration_path, class:'nav-link' %>
      </li>
      <% end %>
    </ul>
  </div>
</nav>

