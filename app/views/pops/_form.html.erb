<%= form_with(model: [@list, @pop], local: true) do |form| %>
<div class="modal-body">
  
    <div class="form-group">
      <%= form.label 'Título artículo' %>
      <%= form.text_field :title, class:'form-control' %>
    </div>
  
    
    <div class="form-group">
      <%= form.text_area :descripcion, class:'form-control', placeholder:'Escribe una breve descripción' %>
      <small id="emailHelp" class="form-text text-muted">Escribe una reseña no muy larga de tu artículo.</small>
    </div>
    
    <div class="form-group">
      <%= form.label :precio %>
      <%= form.number_field :precio, class:'form-control', placeholder:'Ejémplo: 4990' %>
      <small class="form-text text-muted">En pesos Chilenos, sin puntos ni coma</small>
    </div>

    <div class="form-check">
      <%= form.check_box :destacado, class:'form-check-input', type:'radio' %>
      <%= form.label 'Este item es destacado' %>
      <small class="form-text text-muted">Selecciona esto si quieres destacar tu artículo.</small>
    </div>

  
    <div class="input-group mb-3">
      <div class="custom-file">
        <%= form.label 'Seleccionar una imágen', class:'custom-file-label' %>
        <%= form.file_field :avatar, class:'custom-file-input', lang:'es' %>
      </div>
    </div>
  

    
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <%= form.submit 'Publicar', class:'btn btn-primary' %>
  </div>
  <% end %>
