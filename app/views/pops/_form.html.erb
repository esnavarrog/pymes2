<%= form_with(model: [@list, @pop], local: true) do |form| %>
<div class="modal-body">
  
    <div class="form-group">
      <%= form.label 'Título item' %>
      <%= form.text_field :title, class:'form-control' %>
    </div>
  
    <div class="form-group form-check">
      <%= form.label 'Este item es destacado?' %>
      <%= form.check_box :destacado, class:'checkbox' %>
    </div>
  
    <div class="form-group">
      <%= form.label 'Describe tu plato' %>
      <%= form.text_field :descripcion, class:'form-control' %>
      <small id="emailHelp" class="form-text text-muted">Escribe una reseña no muy larga de tu plato.</small>
    </div>
  
    <div class="form-group">
      <%= form.label :precio %>
      <%= form.number_field :precio, class:'form-control' %>
    </div>
  
    <div class="field">
      <%= form.label 'Agrega una imágen.' %>
      <br>
      <%= form.file_field :avatar %>
    </div>
    <br>
  
    <div class="actions">
    </div>
    
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
    <%= form.submit 'Publicar', class:'btn btn-primary' %>
  </div>
  <% end %>
