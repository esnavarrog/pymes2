<% if @product.img1.present? || @product.img2.present? || @product.img3.present? %>
<div id="carouselExampleIndicators" class="carousel slide my-2" data-ride="carousel">
    <ol class="carousel-indicators">
        <% if @product.img1.present? %>
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <% end %> 
        <% if @product.img2.present? %>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <% end %> 
        <% if @product.img3.present? %>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <% end %> 
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <% if @product.img1.present? %>
        <%= image_tag @product.img1.url(:thumb), class:"d-block w-100" %>
        <% end %>
    </div>
    <div class="carousel-item">
        <% if @product.img2.present? %>
        <%= image_tag @product.img2.url(:thumb), class:"d-block w-100" %>
        <% end %>        
    </div>
    <div class="carousel-item">
        <% if @product.img3.present? %>
        <%= image_tag @product.img3.url(:thumb), class:"d-block w-100" %>
        <% end %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <% end %>