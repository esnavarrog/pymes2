              <td>
                <div class="form-inline">
                  <%= form.time_select :viernesC, {minute_step: 15}, class:'form-control inp' %>
                </div>
              </td>
            </tr>
            <tr>
            <th><%= form.label 'Sábado', class:'my-1 mr-2' %></th>
              <td>
                <div class="form-inline">
                  <%= form.time_select :sabadoC, {minute_step: 15}, class:'form-control inp' %>
                </div>
              </td>
            </tr>
            <tr>
            <th><%= form.label 'Domingo', class:'my-1 mr-2' %></th>
              <td>
                <div class="form-inline">
                  <%= form.time_select :domingoC, {minute_step: 15}, class:'form-control inp' %>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </div>

  </div>
</div>
<div class="modal-footer">
  <div class="actions">
    <%= form.submit 'Publicar', class:'btn btn-dark' %>
  </div>
</div>
<% end %>