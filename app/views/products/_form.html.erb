<div class="modal-body">
  <div class="form">
  <%= form_for([@product]) do |form| %>
        <div class="form-group">
          <h6><%= form.label 'Nombre Fantasía' %></h6>
          <%= form.text_field :title, class:'form-control', autofocus:'true' %>
        </div>

        <div class="form-group">
          <h6><%= form.label 'Eslogan o descripción breve, máximo 40 letras.' %></h6>
          <%= form.text_field :info, class:'form-control' %>
        </div>

        <h6>Portada</h6>
        <div class="input-group mb-3">
          
          <div class="custom-file">
            <%= form.label 'Elige una imágen', class:'custom-file-label' %>
            <%= form.file_field :img, class:'custom-file-input', lang:'es' %>
          </div>
        </div>
        
        <div class="form-group">
          <h6><%= form.label 'Describe tu empresa' %></h6>
          <%= form.rich_text_area :body, class:'form-control', style:'min-height: 12rem;', placeholder:'Escribe una reseña de tu negocio...' %>
        </div>
    
    <div class="row">
      <div class="form-group col-12 col-sm-12 col-md-6">
        <h6><%= form.label 'Web personal' %></h6>
        <%= form.text_field :web, class:'form-control', placeholder:'Ej. https://www.ejemploweb.cl' %>
      </div>

      <div class="form-group col-12 col-sm-12 col-md-6">
        <h6><%= form.label 'Escribe palabras para el motor de busqueda' %></h6>
        <%= form.text_field :palabras, class:'form-control', placeholder:'Ej. sushi, café, pasteles, libros, etc.' %>

      </div>
    </div>

    <div class="row">
      <div class="form-group col-12 col-md-6">
        <h6><%= form.label 'Dirección' %></h6>
        <%= form.text_field :address, class:'form-control' %>
      </div>
      <div class="form-group col-12 col-md-6">
        <h6><%= form.label 'Correo electrónico de contacto clientes' %></h6>
        <%= form.text_field :email, class:'form-control' %>
      </div>

  </div>
  <div class="row">
    <div class="form-group col-12 col-md-4">

      <h6><%= form.label 'Teléfono Fijo' %></h6>
      <div class="input-group">
        
        <div class="input-group-prepend">
          <div class="input-group-text">+56</div>
        </div>
        <%= form.text_field :telefono, class:'form-control', placeholder:'Ejem. 22 654 3214', type:'text' %>
      </div>
    </div>
    <div class="form-group col-12 col-md-4">

      <h6><%= form.label 'Botón Whatsapp' %></h6>
      <div class="input-group">
        
        <div class="input-group-prepend">
          <div class="input-group-text">+56</div>
        </div>
        <%= form.text_field :mobil1, class:'form-control', placeholder:'Ejem. 987654321', type:'text' %>
      </div>
    </div>
    <div class="form-group col-12 col-md-4">

      <h6><%= form.label 'Movil otro' %></h6>
      <div class="input-group">
        
        <div class="input-group-prepend">
          <div class="input-group-text">+56</div>
        </div>
        <%= form.text_field :mobil2, class:'form-control', placeholder:'Ejem. 987654321', type:'text' %>
      </div>
    </div>
  
  </div>
  
  <h5 class="mt-3">Botones de redes sociales</h5>
  <hr>
  <div class="row">
    <div class="form-group col-12 col-md-4">
      <h6><%= form.label :facebook %></h6>
      <%= form.text_field :facebook, class:'form-control' %>
    </div>
  
    <div class="form-group col-12 col-md-4">
      <h6><%= form.label :twitter %></h6>
      <%= form.text_field :twitter, class:'form-control' %>
    </div>

    <div class="form-group col-12 col-md-4">
      <h6><%= form.label :instagram %></h6>
      <%= form.text_field :instagram, class:'form-control' %>
    </div>
  </div>


  <h5 class="mt-3 text-center">Tipo de pagos</h5>
  <hr>
  <div class="row p-3">
    <table>
      <tr>
        <th>
          <label class="form-label">Efectivo</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :efectivo, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <label class="form-label">Transferencias</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :transferencia, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <label class="form-label">Crédito</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :credito, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <label class="form-label">Débito</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :debito, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
    </table>
    
  </div>
  <h5 class="mt-3 text-center">Tipo de atención</h5>
  <hr>
  <div class="row p-3">
    <table>
      <tr>
        <th>
          <%= form.label 'Tiempo de espera' %> 
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :tiempoEspera, Product::M_LIST, prompt:'Selecciona', class:'form-control' %> min.
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <%= form.label 'Haces Delivery?' %>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :delivery, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
    </table>
  </div>




      <h5 class="mt-3 text-center">Horarios apertura y cierre</h5>
      <hr>
      <div>
        <!-- Horarios de apertura local -->
        <div class="col-12">
          <h6 class="">Selecciona tus horarios</h6>
          <table class="table text-right">
            <tr>
              <th class='align-middle text-center mw-50'><%= form.label 'Lunes', class:'my-1 mr-2' %></th>
              <td class="row">
                <div class="col">Apertura</div><div class="form-inline"><%= form.time_select :lunesA, {minute_step: 15}, class:'form-control inp' %></div>
              </td>
              <td class="row">
                <div class="col">Cierre</div><div class="form-inline"><%= form.time_select :lunesC, {minute_step: 15}, class:'form-control inp' %></div>
              </td>
            </tr>
            <tr>
              <th class='align-middle text-center'><%= form.label 'Martes', class:'my-1 mr-2' %></th>
              <td class="row">
                <div class="col">Apertura</div><div class="form-inline"><%= form.time_select :martesA, {minute_step: 15}, class:'form-control inp' %></div>
              </td>
              <td class="row">
                <div class="col">Cierre</div><div class="form-inline"><%= form.time_select :martesC, {minute_step: 15}, class:'form-control inp' %></div>
              </td>
              
            </tr>
            <tr>
              <th class='align-middle text-center'><%= form.label 'Miercoles', class:'my-1 mr-2' %></th>
              <td class="row">
                <div class="col">Apertura</div><div class="form-inline"><%= form.time_select :miercolesA, {minute_step: 15}, class:'form-control inp' %></div>
              </td>
              <td class="row">
                <div class="col">Cierre</div><div class="form-inline"><%= form.time_select :miercolesC, {minute_step: 15}, class:'form-control inp' %></div>
              </td>
            </tr>
            <tr>
            <th class='align-middle text-center'><%= form.label 'Jueves', class:'my-1 mr-2' %></th>
            <td class="row">
              <div class="col">Apertura</div><div class="form-inline"><%= form.time_select :juevesA, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            <td class="row">
              <div class="col">Cierre</div><div class="form-inline"><%= form.time_select :juevesC, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            </tr>
            <tr>
            <th class='align-middle text-center'><%= form.label 'Viernes', class:'my-1 mr-2' %></th>
            <td class="row">
              <div class="col">Apertura</div><div class="form-inline"><%= form.time_select :viernesA, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            <td class="row">
              <div class="col">Cierre</div><div class="form-inline"><%= form.time_select :viernesC, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            </tr>
            <tr>
            <th class='align-middle text-center'><%= form.label 'Sábado', class:'my-1 mr-2' %></th>
            <td class="row">
              <div class="col">Apertura</div><div class="form-inline"><%= form.time_select :sabadoA, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            <td class="row">
              <div class="col">Cierre</div><div class="form-inline"><%= form.time_select :sabadoC, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            </tr>
            <tr>
            <th class='align-middle text-center'><%= form.label 'Domingo', class:'my-1 mr-2' %></th>
            <td class="row">
              <div class="col">Apertura</div><div class="form-inline"><%= form.time_select :domingoA, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            <td class="row">
              <div class="col">Cierre</div><div class="form-inline"><%= form.time_select :domingoC, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            </tr>
          </table>
        </div>        
      </div>

  </div>
</div>
    <%= form.submit 'Publicar', class:'btn btn-dark btn-block my-1' %>
<% end %>