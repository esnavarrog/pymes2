<div class="modal-body">
  <div class="form">
  <%= form_with(model: @product, local: true) do |form| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
  
        <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group-check">
    <h5>Categorías</h5>
    <% @categories.each do |category| %>
      <label><%= category.name %></label>
        <%= check_box_tag "categories[]", category.id, class:'form-control-check' %> 
      
      <% end %>
    </div>
  
    <div class="form-group">
      <%= form.label 'Nombre empresa' %>
      <%= form.text_field :title, class:'form-control', autofocus:'true' %>
    </div>

    
  
  
    <div class="form-group">
      <%= form.label 'Descripción empresa' %>
      <%= form.text_area :body, class:'form-control' %>
    </div>
  
    <div class="input-group mb-3">
      <div class="custom-file">
        <%= form.label 'Elige una imágen', class:'custom-file-label' %>
        <%= form.file_field :img, class:'custom-file-input' %>
      </div>
  
    </div>
  
  
  
    <div class="form-group">
      <%= form.label 'Número de contacto' %>
      <%= form.number_field :phone, class:'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label 'Correo electrónico de contacto clientes' %>
      <%= form.text_field :email, class:'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label 'Dirección empresa' %>
      <%= form.text_field :address, class:'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :facebook %>
      <%= form.text_field :facebook, class:'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :twitter %>
      <%= form.text_field :twitter, class:'form-control' %>
    </div>
  
  
  
    <div class="form-group">
      <%= form.label 'Otra información relevante' %>
      <%= form.text_field :info, class:'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label 'Hora apertura' %>
      <%= form.select :horaA, Product::H_LIST, class:'custom-select' %> : 
      <%= form.select :minA, Product::M_LIST, class:'custom-select' %>
    </div>
  
  
  
    <div class="form-group">
      <%= form.label 'Hora Cierre' %>
      <%= form.select :horaC, Product::H_LIST, class:'form-control' %> : 
      <%= form.select :minC, Product::M_LIST, class:'form-control' %>
    </div>
  
  
    <div class="form-group">
      <%= form.label 'Tiempo de espera' %>
      <%= form.select :tiempoEspera, Product::M_LIST, class:'form-control' %> min.
    </div>


    <div class="container bg-light p-3">

      <h4>Información extra</h4>
      <hr>
      <h6>Horarios apertura y cierre</h6>
      <hr>
      <div class="row">
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Apertura Lunes', class:'my-1 mr-2' %>
          <%= form.time_select :lunesA, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
        <div class="form-inline col-12 col-sm-12 col-md-6">
          <%= form.label 'Cierre Lunes', class:'my-1 mr-2' %>
          <%= form.time_select :lunesC, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
      
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Apertura Martes', class:'my-1 mr-2' %>
          <%= form.time_select :martesA, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Cierre Martes', class:'my-1 mr-2' %>
          <%= form.time_select :martesC, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
      
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Apertura Miercoles', class:'my-1 mr-2' %>
          <%= form.time_select :miercolesA, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Cierre Miercoles', class:'my-1 mr-2' %>
          <%= form.time_select :miercolesC, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
      
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Apertura Jueves', class:'my-1 mr-2' %>
          <%= form.time_select :juevesA, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Cierre Jueves', class:'my-1 mr-2' %>
          <%= form.time_select :juevesC, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
     
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Apertura Viernes', class:'my-1 mr-2' %>
          <%= form.time_select :viernesA, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Cierre Viernes', class:'my-1 mr-2' %>
          <%= form.time_select :viernesC, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
     

        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Apertura Sábado', class:'my-1 mr-2' %>
          <%= form.time_select :sabadoA, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Cierre Sábado', class:'my-1 mr-2' %>
          <%= form.time_select :sabadoC, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
   

        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Apertura Domingo', class:'my-1 mr-2' %>
          <%= form.time_select :domingoA, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
        <div class="form-inline col-12 col-sm-12 col-md-6 my-2">
          <%= form.label 'Cierre Domingo', class:'my-1 mr-2' %>
          <%= form.time_select :domingoC, {minute_step: 15}, class:'form-control col-2 my-1 mr-sm-2' %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            <div class="actions">
              <%= form.submit 'Publicar', class:'btn btn-primary' %>
            </div>
<% end %>
</div>