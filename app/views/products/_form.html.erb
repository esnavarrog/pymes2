              <td>
                <div class="form-inline">
                  <%= form.time_select :miercolesC, {minute_step: 15}, class:'form-control inp' %>
                </div>
              </td>
            </tr>
            <tr>
            <th><%= form.label 'Jueves', class:'my-1 mr-2' %></th>
              <td>
                <div class="form-inline">
