<div class="modal-body">

    <%= form_with(model: @product, local: true) do |form| %>
        <div class="form-group">
            <h6><%= form.label 'Dirección' %></h6>
            <%= form.text_field :address, class:'form-control' %>
        </div>
        <div class="form-group">
            <h6><%= form.label 'Correo electrónico de contacto clientes' %></h6>
            <%= form.text_field :email, class:'form-control' %>
        </div>

        <div class="form-group">
            
            <h6><%= form.label 'Teléfono Fijo' %></h6>
    <div class="input-group">
        
        <div class="input-group-prepend">
            <div class="input-group-text">+56</div>
        </div>
        <%= form.text_field :telefono, class:'form-control', placeholder:'Ejem. 22 654 3214', type:'text' %>
    </div>
</div>
<div class="form-group">
    
    <h6><%= form.label 'Botón Whatsapp' %></h6>
    <div class="input-group">
        
        <div class="input-group-prepend">
            <div class="input-group-text">+56</div>
        </div>
        <%= form.text_field :mobil1, class:'form-control', placeholder:'Ejem. 987654321', type:'text' %>
    </div>
<div class="form-group">
    
    <h6><%= form.label 'Movil otro' %></h6>
    <div class="input-group">
        
        <div class="input-group-prepend">
            <div class="input-group-text">+56</div>
        </div>
        <%= form.text_field :mobil2, class:'form-control', placeholder:'Ejem. 987654321', type:'text' %>
    </div>
</div>

<h5 class="mt-3 text-center">Tipo de pagos</h5>
  <hr>
  <div class="row p-3">
    <table>
      <tr>
        <th>
          <label class="form-label">Efectivo</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :efectivo, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <label class="form-label">Transferencias</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :transferencia, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <label class="form-label">Crédito</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :credito, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <label class="form-label">Débito</label>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :debito, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
    </table>
    
  </div>

  <h5 class="mt-3 text-center">Tipo de atención</h5>
  <hr>
  <div class="row p-3">
    <table>
      <tr>
        <th>
          <%= form.label 'Tiempo de espera' %> 
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :tiempoEspera, Product::M_LIST, prompt:'Selecciona', class:'form-control' %> min.
          </div>
        </td>
      </tr>
      <tr>
        <th>
          <%= form.label 'Haces Delivery?' %>
        </th>
        <td>
          <div class="form-inline pl-3">
            <%= form.select :delivery, Product::DELIVERY, class:'form-control' %>
          </div>
        </td>
      </tr>
    </table>
    <table class="table text-right text-dark">
        <tr>
            <th class='align-middle text-center'><%= form.label 'Lunes' %></th>
            <td class="row">
                <div class="col"><i class="fas fa-lock-open"></i></div><div class="form-inline"><%= form.time_select :lunesA, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            <td class="row">
                <div class="col"><i class="fas fa-lock"></i></div><div class="form-inline"><%= form.time_select :lunesC, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
        </tr>
        <tr>
            <th class='align-middle text-center'><%= form.label 'Martes' %></th>
            <td class="row">
                <div class="col"><i class="fas fa-lock-open"></i></div><div class="form-inline"><%= form.time_select :martesA, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            <td class="row">
                <div class="col"><i class="fas fa-lock"></i></div><div class="form-inline"><%= form.time_select :martesC, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            
        </tr>
        <tr>
            <th class='align-middle text-center'><%= form.label 'Miercoles' %></th>
            <td class="row">
                <div class="col"><i class="fas fa-lock-open"></i></div><div class="form-inline"><%= form.time_select :miercolesA, {minute_step: 15}, class:'form-control inp' %></div>
            </td>
            <td class="row">
        <div class="col"><i class="fas fa-lock"></i></div><div class="form-inline"><%= form.time_select :miercolesC, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
</tr>
    <tr>
        <th class='align-middle text-center'><%= form.label 'Jueves' %></th>
    <td class="row">
        <div class="col"><i class="fas fa-lock-open"></i></div><div class="form-inline"><%= form.time_select :juevesA, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
    <td class="row">
        <div class="col"><i class="fas fa-lock"></i></div><div class="form-inline"><%= form.time_select :juevesC, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
</tr>
<tr>
    <th class='align-middle text-center'><%= form.label 'Viernes' %></th>
    <td class="row">
        <div class="col"><i class="fas fa-lock-open"></i></div><div class="form-inline"><%= form.time_select :viernesA, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
    <td class="row">
        <div class="col"><i class="fas fa-lock"></i></div><div class="form-inline"><%= form.time_select :viernesC, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
</tr>
<tr>
    <th class='align-middle text-center'><%= form.label 'Sábado' %></th>
    <td class="row">
        <div class="col"><i class="fas fa-lock-open"></i></div><div class="form-inline"><%= form.time_select :sabadoA, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
    <td class="row">
      <div class="col"><i class="fas fa-lock"></i></div><div class="form-inline"><%= form.time_select :sabadoC, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
</tr>
<tr>
    <th class='align-middle text-center'><%= form.label 'Domingo' %></th>
    <td class="row">
      <div class="col"><i class="fas fa-lock-open"></i></div><div class="form-inline"><%= form.time_select :domingoA, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
    <td class="row">
        <div class="col"><i class="fas fa-lock"></i></div><div class="form-inline"><%= form.time_select :domingoC, {minute_step: 15}, class:'form-control inp' %></div>
    </td>
</tr>
</table>
  </div>

</div>
<div class="modal-footer">
    <%= form.submit 'Actualizar',  class:'btn btn-dark btn-block my-1' %>
</div>

<% end %>