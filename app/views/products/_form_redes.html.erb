<div class="modal-body">

<%= form_with(model: @product, local: true) do |form| %>
    
    <h5 class="mt-3">Botones de redes sociales</h5>
    <hr>
    <div class="form-group">
        <h6><%= form.label :facebook %></h6>
        <%= form.text_field :facebook, class:'form-control', placeholder:'Ejemplo: ConectaBuin' %>
    </div>
    
    <div class="form-group">
        <h6><%= form.label :twitter %></h6>
        <%= form.text_field :twitter, class:'form-control', placeholder:'Ejemplo: ConectaBuin' %>
    </div>
    
    <div class="form-group">
        <h6><%= form.label :instagram %></h6>
        <%= form.text_field :instagram, class:'form-control', placeholder:'Ejemplo: ConectaBuin' %>
    </div>
    
    <div class="form-group">
        <h6><%= form.label 'Web personal' %></h6>
        <%= form.text_field :web, class:'form-control', placeholder:'Ej. https://www.ejemploweb.cl' %>
    </div>
</div>

    <div class="modal-footer">
        <%= form.submit 'Actualizar',  class:'btn btn-dark btn-block my-1' %>
    </div>
    
    <% end %>
    