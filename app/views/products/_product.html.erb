<div class="col-sm-4">
  <figure class="figure">
    <%= link_to (image_tag product.img.thumb.url, class:'card-img-top'), product %>
    <figcaption class="figure-caption">
      <h5 class=""><%= product.title %></h5>
      <p class="card-text"><%= product.info %></p>
      <%= link_to 'Go somewhere', product, class:'btn btn-primary' %>
      <%= link_to 'Destroy', product, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    </figcaption>
  </figure>
</div>