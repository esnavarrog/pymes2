<div class="jumbotron bg-white pt-3">
  <div class="row">
    <div class="col-md-5">
      <div class="row justify-content-md-center">
        <%= image_tag @product.img.thumb.url, class:'rounded mx-auto d-block img-fluid' %>
      </div>

    </div>
    <div class="col-md-7">
      <h1 class="text-center text-primary mt-3"><u><%= @product.title %></u></h1>
    
      
      <hr class="my-4">
      <div class="container">
    
        <div class=" mb-2 bg-light text-primary text-center">
          <p> <strong>Teléfono principal: </strong>+<%= @product.phone %>
            <br>          
            <strong>Correo electrónico: </strong><%= @product.email %>
            <br>
            <strong>Dirección: </strong><%= @product.address %>
            <br>
            <strong>Tiempo de espera:</strong> <%= @product.tiempoEspera %> Minutos
          </p>
          <% if @product.info.empty? %>
          <% else %>
          <%= @product.info %>
          <% end %>
        </div>
        
        <p class="p-3 mb-2 bg-light text-dark text-justify"><%= @product.body %></p>
      </div>

    </div>

  </div>
  <hr class="my-4">
        <div class="text-center">
          <h5 class="text-primary mb-4">Redes Sociales.</h5>
      
          <% if @product.phone.nil? %>
          <% else %>
          <a href="https://wa.me/<%= @product.phone %>?text=Hola <%= @product.title.capitalize %>, los vi en BuinPymes<% if user_signed_in? %> soy <%= current_user.name %><%end%>, quería saber" target="_blank" class="shadow btn btn-whatsapp mt-1"><i class="fab fa-whatsapp"></i> Whatsapp</a>
          <% end %>

          <% if @product.facebook.empty? %>
          <% else %>
          <a href="<%= @product.facebook %>" title="Facebook" class="shadow btn btn-facebook mt-1"><i class="fab fa-facebook-f"></i> Facebook</a>
          <% end %>

          <% if @product.twitter.empty? %>
          <% else %>
          <a href="<%= @product.twitter %>" class="shadow btn btn-twitter mt-1"><i class="fab fa-twitter"></i> Twitter</a>
          <% end %>

          <% if @product.email.empty? %>
          <% else %>
          <a href="<%= @product.email %>" class="shadow btn btn-instagram mt-1"><i class="fab fa-instagram"></i> Instagram</a>
          <% end %>

          <% if @product.email.empty? %>
          <% else %>
          <a href="mailto:<%= @product.email %>" class="shadow btn btn-primary mt-1"><i class="far fa-envelope"></i> Email</a>
          <% end %>
          
        </div>

</div>

<!-- Contenido de la empresa -->
<!-- Article -->
<div class="container-fluid">
  <div class="row row-cols-2">
    <div class="col-12 col-md-8">
      <!-- Carrousel de imagenes -->
      <div id="carouselExampleIndicators" class="carousel slide mb-3" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://www.jhbotts.com/wp-content/uploads/2014/06/1200-x-300-1.png" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://www.blungrey.com/wp-content/uploads/2018/02/desarrollos.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://americanpronunciationcoach.com/wp-content/uploads/1200-x-300-website-sliders-china-man.jpg" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <!-- Comienza info -->
      <nav>
        <div class="nav nav-tabs mb-3" id="nav-tab" role="tablist">
          <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Lista artículos</a>
          <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Información</a>
    
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
          <div class="text-center"> 
    
            <% if user_signed_in? && current_user == @product.user %>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#categoria">
              <i class="fas fa-chevron-down"></i> Agrega categoría
            </button>
            <% end %>
          </div>
          
          <!-- Modal -->
          <div class="modal fade" id="categoria" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
          
                    Añadir una categoría
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <%= render 'lists/form' %>
               
              </div>
            </div>
          </div>
          
          <% @product.lists.each do |list| %>
            <% if user_signed_in? && current_user == @product.user %>
              <h4 class="mt-3"><%= link_to list.title, list %></h4>
              <%= link_to 'Agregar item', list, class:'btn btn-primary btn-sm'%>
            <% else %>
          <div class="inline-block"><h4 class="h3"><%= list.title %></h4>
          </div>
          
          <% end %>
          <hr>
            <div class="row">
              <% list.pops.each do |pop| %>
              <div class="col-6 col-md-3 mt-1 pr-1 pl-1">
                <div class="card text-primary shadow-sm mb-3">
                      <%= image_tag pop.avatar.thumb.url, class:'card-img-top' %>
          
                      <div class="card-body">
                        <h6 class="card-title">
                          <% if pop.destacado == true %>
                            <i class="fas fa-star text-secondary"></i>
                          <% end %>
          
                          <%= pop.title %>
                        </h6>
                        <p class="card-subtitle mt-2 text-muted">Precio $<%= number_with_delimiter(pop.precio, :delimiter => ".") %></p>
                        <small class="card-text"><%= pop.descripcion.truncate_words(15) %></small>
                      </div>
                </div>
              </div>
              <% end %>
            </div>
            
             
          
              <br>
          
          <% end %>
    
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
          <h4>Información.</h4>
    
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Día</th>
                <th scope="col">Hora apertura</th>
                <th scope="col">Hora cierre</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Lunes</td>
                <td>10:00</td>
                <td>22:00</td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Martes</td>
                <td>10:00</td>
                <td>22:00</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Miercoles</td>
                <td>10:00</td>
                <td>22:00</td>
              </tr>
              <tr>
                <th scope="row">4</th>
                <td>Jueves</td>
                <td>10:00</td>
                <td>22:00</td>
              </tr>
              <tr>
                <th scope="row">5</th>
                <td>Viernes</td>
                <td>10:00</td>
                <td>21:00</td>
              </tr>
              <tr>
                <th scope="row">6</th>
                <td>Sábado</td>
                <td>11:00</td>
                <td>17:00</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td>Domingo</td>
                <td>N/A</td>
                <td>N/A</td>
              </tr>
            </tbody>
          </table>
    
          <div class="bg-light rounded shadow-sm" style="height: 30rem; width: 30rem;">
            Mapa
          </div>
    
    
        </div>
      </div>
    </div>
    <!-- Aside -->
    <div class="col-12 col-md-4">
      <div class="bg-light border rounded-lg p-3 m-0 shadow-sm">
        <h4 class="text-primary">Comentarios</h4>
        <% if @product.comments.empty? %>
          <h5 class="alert alert-info">Deja el primer comentario</h5>
        <% else %>
        <ul class="list-group" style="max-height: 600px; overflow-y: scroll; overflow-x: hidden;">
          <% @product.comments.each do |comment| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-2">
                <%= image_tag comment.user.image.avatar.url, class:'align-self-center rounded m-0' %>
              </div>
              <div class="col-10">
                <div class="d-flex w-100 justify-content-between">
                  <h6 class="mb-1"><%= comment.user.name %></h6>
                  <small><%= "#{time_ago_in_words(comment.created_at)}" if comment.created_at %></small>
                </div>
                <p class="mb-1"><%= comment.body %></p>
                
              </div>
            </div>
          </li>
          <% end %>
        </ul>
        <% end %>
                  <!-- Button trigger modal -->
          
          <button type="button" class="btn btn-primary btn-block mt-2" data-toggle="modal" data-target="#comment">
            Agregar comentario
          </button>

          <!-- Modal -->
          <div class="modal fade" id="comment" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalCenterTitle">Escribe un comentario</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <% if user_signed_in? %>
                    <%= form_for([@product, @product.comments.build]) do |f| %>

                      <p class="form-group">
                        <%= f.text_area :body, class:'form-control', placeholder:'Escribe tu comentario aquí' %>
                      </p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                      <%= f.submit 'Publicar comentario', class:'btn btn-primary' %>
                      <% end %>
                  <% else %>
                    <%= link_to 'Iniciar sesión', new_user_session_path, class:'btn btn-success' %>
                    <%= link_to 'Registrarse', new_user_registration_path, class:'btn btn-danger' %>
                    </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      </div>

      <div class="bg-light p-3 mt-3 shadow-sm border rounded-lg">
        <h4 class="text-primary">Envía un mensaje directo</h4>
        <small class="text-muted font-italic">Este mensaje solo será recibido por la empresa.</small>
        <form>
          <div class="form-group">
            <input name="" id="" class="form-control" placeholder="Ingresa tu Email">
          </div>
          <div class="form-group">
            <input name="" id="" class="form-control" placeholder="Ingresa tu Nombre">
          </div>
          <div class="form-group">
            <textarea class="form-control" id="message-text" placeholder="Ingresa tu mensaje"></textarea>

          </div>
          <button class="btn btn-primary btn-block">Enviar mensaje</button>
        </form>
      </div>
    </div>

  </div>


  

</div>